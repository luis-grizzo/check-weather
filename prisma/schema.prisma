generator client {
  provider = "prisma-client-js"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Location {
  id        String @id @default(cuid())
  latitude  String
  longitude String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  placeId String
  place   Place  @relation(fields: [placeId], references: [id])
}

model Place {
  id          String  @id @default(cuid())
  name        String
  slug        String  @unique
  state       String?
  country     String
  latitude    String
  longitude   String
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  locations Location[]
}
